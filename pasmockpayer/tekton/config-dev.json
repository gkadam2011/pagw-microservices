{
  "name": "pas-mock-payer",
  "namespace": "pagw-dev",
  "image": {
    "repository": "quay-nonprod.elevancehealth.com/aedl/pas-mock-payer",
    "tag": "latest"
  },
  "build": {
    "context": "pasmockpayer",
    "dockerfile": "Dockerfile"
  },
  "service": {
    "port": 8095,
    "targetPort": 8095
  },
  "deployment": {
    "replicas": 1,
    "resources": {
      "requests": {
        "memory": "256Mi",
        "cpu": "100m"
      },
      "limits": {
        "memory": "512Mi",
        "cpu": "500m"
      }
    }
  },
  "probes": {
    "liveness": {
      "path": "/actuator/health",
      "port": 8095,
      "initialDelaySeconds": 30,
      "periodSeconds": 10
    },
    "readiness": {
      "path": "/actuator/health",
      "port": 8095,
      "initialDelaySeconds": 10,
      "periodSeconds": 5
    }
  },
  "env": [
    {
      "name": "SERVER_PORT",
      "value": "8095"
    },
    {
      "name": "LOGGING_LEVEL_COM_ELEVANCE_PAGW_MOCKPAYER",
      "value": "INFO"
    }
  ]
}
